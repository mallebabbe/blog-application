extends layout
block content
	p #{user.name} likes to see all the online posts.
	#posts
	each post in data 
		#single
			h2#oneTitle Title: #{post.title}
			p#oneBody #{post.body}
		form(name="commentPost", action="/commentPost", method="post")
			div.textComment
				span.label Leave Comment
				input(type="text", name="id",value="#{post.id}", hidden)
				input(type="text", name="origin",value="/view-all-posts", hidden)
				textarea.commentfield(type="text", name="commentfield")
				div.actions
					input(type="submit", value="comment")
			.display-comments
				each comment in post.comments
					h5 author: #{comment.user.name}
					p#ouwes #{comment.body}